<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlatosApp.Views.PlatoPage"
             Title="Agregar/Editar Plato">

    <StackLayout Padding="20">
        <Entry x:Name="NombreEntry" Placeholder="Nombre del Plato"/>
        <Entry x:Name="CostoEntry" Placeholder="Costo del Plato" Keyboard="Numeric"/>
        <Entry x:Name="IngredientesEntry" Placeholder="Ingredientes"/>
        <Button Text="Guardar" Clicked="OnSaveClicked"/>
    </StackLayout>

</ContentPage>